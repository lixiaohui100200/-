/**index.wxss**/
.slide-image{
  height: 177px;
  width: 100%;
}

.line-css {

    height: 1px;

    background: #888;

    margin: 20 20px;
}
.nav image{
  width: 35px;
  height: 35px;
  display: flex;
}
.nav view {
  width:70px;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 6px 0 6px 0;
}
.nav span {
  font-size: 11px;
  display: inline-flex;
  color:#00265d;
}
.nav {
  display: flex;
  background: #ecebec;
  justify-content: space-around;
}

.content image{
   width: 90%;
   height: 200px;
   margin: 20px 20px 0 20px;
}
.content view ,.content view text{
  display: block;
  margin: 0 20px 0 20px;
  font-size: 12px;
  color:#00265d;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/*选中中间导航变色背景*/
.nav .selected{
  width:70px;
  height:51px;
  background-color:white;
  border-radius:50px 50px 0 0;
}
.content1,.content2{
    display: none;
}
/*关于我  */
.content .about{
  height: 100px;
  position:fixed; bottom:0;
}
/*产品图片  */
.content .project image{
  width: 130px;
  height: 95px;
  border-radius: 15px;
  margin: 10px;
}
.content .project_name{
  font-size: 11px;
  color:#00265d;
  display: inline-flex;
  
 
}
.content .project{
  width:50%;
  height:auto;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin: 10px 0 0 0;
}
.content > .top{
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}
